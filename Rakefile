task :default => [:build, :rspec]

desc "Builds distribution"
task :build do
  puts "Building distribution..."
  # Pavel.build
  puts "Done."
end

desc "Alias of rspec"
task :spec => :rspec

desc "Alias of rspec"
task :test => :rspec

desc "Runs tests on distribution"
task :rspec do
  puts "Testing distribution..."
  puts "Done."
end
